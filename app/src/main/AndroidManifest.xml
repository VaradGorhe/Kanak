        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"

            android:theme="@style/Theme.Design.NoActionBar">



        </activity>
        <activity android:name=".Gif"
            android:theme="@style/Theme.Design.NoActionBar">
